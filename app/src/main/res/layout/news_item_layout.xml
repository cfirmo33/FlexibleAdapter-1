<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/image_item"
            android:layout_toStartOf="@id/image_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/article_publication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:singleLine="true"
                android:textSize="16sp"
                tools:text="Publication name" />

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="A great publication just released the best way to publish articles!" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/article_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/number_recommends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_recommend"
                android:drawableStart="@drawable/ic_action_recommend"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="16sp"
                tools:text="53" />

            <TextView
                android:id="@+id/number_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_comment"
                android:drawableStart="@drawable/ic_action_comment"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="16sp"
                tools:text="53" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>